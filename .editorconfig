# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
max_line_length = 72

[*.py]
indent_style = space
max_line_length = 80
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
