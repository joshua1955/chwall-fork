[Desktop Entry]
Name=Chwall
GenericName=Wallpaper Changer
GenericName[es]=Seleccionador de fondo de pantalla
GenericName[fr]=Changeur de fond d’écran
Comment=Main window of the Chwall wallpaper changer
Comment[es]=Ventana principal del gestor de fondos Chwall
Comment[fr]=Fenêtre principale du changeur de fond d’écran Chwall
Exec=python -m chwall.gui.app
Path={path}
Icon=chwall
Terminal=false
Type=Application
Categories=GTK;GNOME;Utility;
StartupNotify=false
Actions=Next;Previous;Favorite;Block;

[Desktop Action Next]
Exec=python -m chwall.client next
Path={path}
Name=Next wallpaper
Name[es]=Siguiente fondo
Name[fr]=Fond d’écran suivant

[Desktop Action Previous]
Exec=python -m chwall.client previous
Path={path}
Name=Previous wallpaper
Name[es]=Fondo anterior
Name[fr]=Fond d’écran précédent

[Desktop Action Favorite]
Exec=python -m chwall.client favorite
Path={path}
Name=Favorite wallpaper
Name[es]=Save as favorite
Name[fr]=Enregistrer en tant que favori

[Desktop Action Block]
Exec=python -m chwall.client block
Path={path}
Name=Block wallpaper
Name[es]=Put on block list
Name[fr]=Bloquer ce fond d’écran
